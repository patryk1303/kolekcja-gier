---
const menu = [
  { href: '/kolekcja-gier', label: 'Główna' },
  { href: '/kolekcja-gier/all', label: 'Wszystkie' },
  { href: '/kolekcja-gier/ps2', label: 'PS2' },
  { href: '/kolekcja-gier/pc-all', label: 'PC - wszystkie' },
  { href: '/kolekcja-gier/pc-amazon', label: 'PC/Amazon' },
  { href: '/kolekcja-gier/pc-epic', label: 'PC/Epic' },
  { href: '/kolekcja-gier/pc-gog', label: 'PC/GOG' },
  { href: '/kolekcja-gier/pc-steam', label: 'PC/Steam' },
]

const { pathname } = Astro.url

---
<ul class="flex justify-center list-none gap-4">
  {menu.map(({href, label}) =>
    <li>
      <a
        {href}
        class:list={[{'font-bold': href === pathname || `${href}/` === pathname}]}
      >{ label }</a>
    </li>
  )}
</ul>
